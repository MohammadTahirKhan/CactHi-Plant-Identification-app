<%- include('./partials/header.ejs') %>

<div class="container">
    <div class="row" data-masonry='{"percentPosition": true }'>
        <% if (plants.length == 0) { %>
            <p>There are no plants</p>
    
        <% } else { %>
            <% plants.forEach(plant => { %>
                <div class="col-12 col-md-6 col-lg-4 mb-4">
                    <a class="card" href="/view-plants/<%- plant._id %>" style="text-decoration: none;">
                        <img class="card-img-top img-fluid" src="/images/<%- plant.image %>" alt="Picture of <%- plant.name %>" />
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <h4 class="card-title"><%= plant.name %></h4>
                                <% if (plant.identification_complete) { %>
                                    <div class="badge text-bg-success">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check" viewBox="0 0 16 16">
                                            <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425z"/>
                                        </svg>
                                    </div>
                                <% } %>
                            </div>
                            <p class="card-text"><%= plant.description %></p>
                        </div>
                        <div class="card-footer">
                            <p class="card-text mb-0"><span class="text-muted">Posted by</span> <%= plant.user %></p>
                            <p class="card-text">
                                <span class="text-muted">On</span>
                                <%= new Date(plant.date_time_added).toLocaleDateString() %>
                                <span class="text-muted">at</span>
                                <%= new Date(plant.date_time_added).toLocaleTimeString() %>
                            </p>
                        </div>
                    </a>
                </div>
            <% }) %>
        <% } %>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/masonry-layout@4.2.2/dist/masonry.pkgd.min.js" integrity="sha384-GNFwBvfVxBkLMJpYMOABq3c+d3KnQxudP/mGPkzpZSTYykLBNsZEnG2D9G/X/+7D" crossorigin="anonymous" async></script>
<%- include('./partials/footer.ejs') %>
